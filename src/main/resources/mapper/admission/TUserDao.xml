<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.user.common.user.dao.TUserDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.example.demo.user.common.user.entity.TUserEntity" id="tUserMap">
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="orginId" column="orgin_id"/>
        <result property="orginCode" column="orgin_code"/>
        <result property="yxbz" column="yxbz"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryUser" resultType="java.util.Map">
        select * from t_user where yxbz = '1'
    </select>

    <select id="queryCount" resultType="java.lang.Integer">
        select count(*) from t_user where username = #{username}
    </select>

    <select id="queryUserLogin" resultMap="tUserMap">
        select * from t_user where username = #{username} and password = #{password}
    </select>


</mapper>